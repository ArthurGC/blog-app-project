<div class="container">
    <h2 class="fs-5 fw-bold">Create a Post</h2>
    <%= form_with model: @post, class: "form" do |form| %>

    <% flash.each do |name, msg| %>
        <div class="alert alert-danger">
            <%= msg %>
        </div>
    <% end %>


    <div class="form-section">
        <p class="form-label"><%= form.label :title %>:</p>
        <%= form.text_field :title,
        class: "form-control",
        placeholder: "Write your title..." %>
    </div>
    <div class="form-section">
        <p class="form-label"><%= form.label :text %>:</p>
        <%= form.text_area :text,
        class: "form-control",
        placeholder: "Write your post text..." %>
    </div>
    <div class="form-section mt-4">
        <%= form.submit class: "btn btn-success me-4" %>
        <%= link_to "Return", "/users", class: "btn btn-success" %>
    </div>
    <% end %>
</div>
